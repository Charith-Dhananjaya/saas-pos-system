# ────────────────────────────────────────────────
# CDZ POS System – Environment Variables
# ────────────────────────────────────────────────

# Database (matches docker-compose.yml)
DB_URL=jdbc:mysql://localhost:3306/pos_bs?createDatabaseIfNotExist=true
DB_USERNAME=root
DB_PASSWORD=1234

# Server
SERVER_PORT=5000
SHOW_SQL=true

# JWT (Random secret for development)
# In production, use a secure, randomly generated string
JWT_SECRET=dev-secret-key-change-in-production-please-1234567890
JWT_EXPIRATION=86400000

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Stripe (Optional for local dev, required for payments)
# get keys from https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=
STRIPE_CURRENCY=usd
STRIPE_WEBHOOK_SECRET=
