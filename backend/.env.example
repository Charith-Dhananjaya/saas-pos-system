# ────────────────────────────────────────────────
# CDZ POS System – Environment Variables
# Copy this file to .env and fill in real values
# ────────────────────────────────────────────────

# Database
DB_URL=jdbc:mysql://localhost:3306/pos_bs?createDatabaseIfNotExist=true
DB_USERNAME=root
DB_PASSWORD=changeme

# Server
SERVER_PORT=5000
SHOW_SQL=false

# JWT (use a strong, random 256-bit key in production)
JWT_SECRET=your-production-jwt-secret-at-least-32-chars-long
JWT_EXPIRATION=86400000

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Stripe (get keys from https://dashboard.stripe.com/apikeys)
STRIPE_API_KEY=sk_test_...
STRIPE_CURRENCY=usd
STRIPE_WEBHOOK_SECRET=whsec_...
